<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/count_num"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="count number" />

    <Button
        android:id="@+id/count_alpha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/count_num"
        android:text="count alphabet" />

    <TextView
        android:id="@+id/count_num_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/count_num"
        android:text="0"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/count_alpha_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/count_alpha"
        android:layout_toRightOf="@+id/count_num_text"
        android:text="a"
        android:textAlignment="center"
        android:textSize="25sp" />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/count_alpha_text"
        android:layout_marginTop="20dp"
        android:text="next" />


</RelativeLayout>