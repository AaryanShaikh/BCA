<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gallery">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/top_nav">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-10dp"
            android:background="@drawable/close"
            android:id="@+id/close"/>

        <Spinner
            android:id="@+id/dropdown"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:entries="@array/types">
        </Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="22sp"
            android:textColor="#4e92d1"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="360dp"
        android:layout_height="540dp"
        android:layout_below="@+id/top_nav"
        android:id="@+id/images">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="10">
            <ImageView
                android:layout_height="350dp"
                android:layout_width="200dp"
                android:src="@drawable/immain"
                android:layout_rowSpan="4"
                android:layout_columnSpan="4"
                android:layout_gravity="fill"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im2"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im3"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im4"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im4"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im5"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im6"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im7"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im8"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im9"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im10"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im11"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im12"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im2"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im3"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im4"/>
            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@drawable/im5"/>
        </GridLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btm_nav"
        android:orientation="horizontal"
        android:layout_below="@+id/images">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:textSize="25sp"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo"
            android:textSize="25sp"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video"
            android:textSize="25sp"
            android:layout_marginLeft="35dp"/>

    </LinearLayout>

</RelativeLayout>