<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Page"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:id="@+id/h1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->Stories can be scrolled Horizontally"
                android:textSize="25sp"
                android:id="@+id/t1"
                android:layout_below="@+id/h1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->Posts can be scrolled Vertically"
                android:textSize="25sp"
                android:id="@+id/t2"
                android:layout_below="@+id/t1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->At the end of the last post there is Recent Stories which can be scrolled Horizontally"
                android:textSize="25sp"
                android:id="@+id/t3"
                android:layout_below="@+id/t2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->IGTV can be accessed"
                android:textSize="25sp"
                android:id="@+id/t4"
                android:layout_below="@+id/t3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->Message can be accessed"
                android:textSize="25sp"
                android:id="@+id/t5"
                android:layout_below="@+id/t4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->The first story(banuprakash) can be accessed and all 5 stories are available(wait 3 secs)"
                android:textSize="25sp"
                android:id="@+id/t6"
                android:layout_below="@+id/t5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Page"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:id="@+id/h2"
                android:layout_below="@+id/t6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->Tags can be scrolled Horizontally"
                android:textSize="25sp"
                android:id="@+id/t7"
                android:layout_below="@+id/h2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->Images can be scrolled Vertically"
                android:textSize="25sp"
                android:id="@+id/t8"
                android:layout_below="@+id/t7"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Image/Photo Page"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:id="@+id/h3"
                android:layout_below="@+id/t8"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->Images can be scrolled Vertically"
                android:textSize="25sp"
                android:id="@+id/t9"
                android:layout_below="@+id/h3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->Location can be selected from the dropdown"
                android:textSize="25sp"
                android:id="@+id/t10"
                android:layout_below="@+id/t9"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You/Following Page"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:id="@+id/h4"
                android:layout_below="@+id/t10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->Past posts and stories can be scrolled Vertically"
                android:textSize="25sp"
                android:id="@+id/t11"
                android:layout_below="@+id/h4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profle Page"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:id="@+id/h5"
                android:layout_below="@+id/t11"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->Details can be scrolled Vertically"
                android:textSize="25sp"
                android:id="@+id/t12"
                android:layout_below="@+id/h5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-->Edit Profile can be accessed"
                android:textSize="25sp"
                android:id="@+id/t13"
                android:layout_below="@+id/t12"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>