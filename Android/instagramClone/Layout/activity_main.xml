<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="360dp"
        android:id="@+id/bottom_nav"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="590dp">
        <ImageButton
            android:id="@+id/home"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="@drawable/home" />
        <ImageButton
            android:id="@+id/search"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-40dp"
            android:background="@drawable/search" />
        <ImageButton
            android:layout_width="100dp"
            android:id="@+id/add"
            android:layout_height="70dp"
            android:layout_marginLeft="-30dp"
            android:background="@drawable/add" />
        <ImageButton
            android:id="@+id/heart"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-10dp"
            android:background="@drawable/heart" />
        <ImageButton
            android:id="@+id/profile1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-10dp"
            android:background="@drawable/profile" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/top_nav">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-10dp"
            android:id="@+id/camera"
            android:background="@drawable/camera" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="-7dp"
            android:id="@+id/instagram"
            android:background="@drawable/instagram" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/igtv"
            android:background="@drawable/igtv" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-13dp"
            android:background="@drawable/msg"
            android:id="@+id/msg"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="520dp"
        android:id="@+id/main_scroll"
        android:scrollbars="none"
        android:layout_below="@+id/top_nav">
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:id="@+id/main1"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/story_nav"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/my"
                        android:layout_width="95dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/my"/>
                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/profile1"
                        android:id="@+id/storybtn"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/profile2" />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/profile3" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/profile4" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/profile5" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/profile6" />
                </LinearLayout>
            </HorizontalScrollView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@drawable/pic1" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@drawable/pic2" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@drawable/pic3" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/rec"
                android:layout_marginTop="-10dp"/>
            <HorizontalScrollView
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/recent_nav"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/my1"
                        android:layout_width="150dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/recent"/>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/recent2" />
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/recent3" />
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/recent4" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="300dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/recent5" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>