<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".igtv">

    <ImageButton
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:background="@drawable/igtop"
        android:id="@+id/top_nav"/>

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="590dp"
        android:layout_below="@+id/top_nav">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="10"
            android:columnCount="2">
            <ImageView
                android:layout_height="400dp"
                android:layout_width="300dp"
                android:background="@drawable/igim1"
                android:layout_row="2"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"/>
            <ImageView
                android:layout_height="240dp"
                android:layout_width="180dp"
                android:background="@drawable/igim2"/>
            <ImageView
                android:layout_height="240dp"
                android:layout_width="180dp"
                android:background="@drawable/igim3"/>
            <ImageView
                android:layout_height="240dp"
                android:layout_width="180dp"
                android:background="@drawable/igim4"/>
            <ImageView
                android:layout_height="240dp"
                android:layout_width="180dp"
                android:background="@drawable/igim5"/>
            <ImageView
                android:layout_height="240dp"
                android:layout_width="180dp"
                android:background="@drawable/igim6"/>
            <ImageView
                android:layout_height="240dp"
                android:layout_width="180dp"
                android:background="@drawable/igim7"/>
            <ImageView
                android:layout_height="240dp"
                android:layout_width="180dp"
                android:background="@drawable/igim8"/>
            <ImageView
                android:layout_height="240dp"
                android:layout_width="180dp"
                android:background="@drawable/igim9"/>

        </GridLayout>



    </ScrollView>

</RelativeLayout>